# .env.example for auth-service

# 服務配置
NODE_ENV=development
PORT=3001

# 資料庫配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_chat_auth
DB_USER=auth_user
DB_PASSWORD=auth_password

# JWT配置
JWT_EXPIRES_IN=24h

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 日誌等級
LOG_LEVEL=info